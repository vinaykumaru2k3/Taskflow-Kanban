rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── User profile ──
    // Any signed-in user can read profiles (needed for findUserByEmail lookup).
    // Only the owner can write their own profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ── User's own boards (private) ──
    match /users/{userId}/boards/{boardId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ── User's own tasks ──
    // Owner has full access.
    // A collaborator can read/write tasks when they have a sharedBoards entry for that boardId.
    match /users/{userId}/tasks/{taskId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)/sharedBoards/$(resource.data.boardId));
      allow write: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)/sharedBoards/$(request.resource.data.boardId));
    }

    // ── sharedBoards subcollection ──
    // The owner reads their own shared boards list.
    // Any signed-in user can write (needed for acceptInvite to create the entry
    // and removeCollaborator to delete it on behalf of the board owner).
    match /users/{userId}/sharedBoards/{boardId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null;
    }

    // ── Notifications subcollection ──
    // Only the recipient reads/updates/deletes their own notifications.
    // Any signed-in user can CREATE a notification (needed to deliver invites to other users).
    // NOTE: Reading another user's notifications from the client is intentionally blocked —
    // the app handles this via try/catch in shareBoard for the duplicate-check.
    match /users/{userId}/notifications/{notifId} {
      allow read, delete: if request.auth != null && request.auth.uid == userId;
      allow update:       if request.auth != null && request.auth.uid == userId;
      allow create:       if request.auth != null;
    }

    // ── Global boards/{boardId}/members collection ──
    // Used for the Team Panel real-time listener.
    // Any signed-in user can read/write (the app logic gates who can mutate via the UI).
    match /boards/{boardId}/{document=**} {
      allow read, write: if request.auth != null;
    }

  }
}
