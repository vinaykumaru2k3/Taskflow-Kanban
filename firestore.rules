rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helper: get a collaborator's role from their sharedBoards entry ──
    function collaboratorRole(uid, boardId) {
      return get(/databases/$(database)/documents/users/$(uid)/sharedBoards/$(boardId)).data.role;
    }

    // ── User profile ──
    // Any signed-in user can read profiles (needed for findUserByEmail lookup).
    // Only the owner can write their own profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ── User's own boards (private) ──
    match /users/{userId}/boards/{boardId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ── User's own tasks ──
    // Owner has full access.
    // Collaborator READ: any role (viewer, editor, admin) can read.
    // Collaborator WRITE: only editor or admin — NOT viewer.
    match /users/{userId}/tasks/{taskId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Any collaborator can read
      allow read: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)/sharedBoards/$(resource.data.boardId));

      // Only editor / admin collaborators can write tasks
      allow write: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)/sharedBoards/$(request.resource.data.boardId)) &&
        collaboratorRole(request.auth.uid, request.resource.data.boardId) in ['admin', 'editor'];
    }

    // ── sharedBoards subcollection ──
    // The owner reads their own shared boards list.
    // Any signed-in user can write (needed for acceptInvite to create the entry
    // and removeCollaborator to delete it on behalf of the board owner).
    match /users/{userId}/sharedBoards/{boardId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null;
    }

    // ── Notifications subcollection ──
    // Only the recipient reads/updates/deletes their own notifications.
    // Any signed-in user can CREATE a notification (needed to deliver invites).
    // NOTE: Reading another user's notifications from the client is intentionally blocked —
    // the app handles this via try/catch in shareBoard for the duplicate-check.
    match /users/{userId}/notifications/{notifId} {
      allow read, delete: if request.auth != null && request.auth.uid == userId;
      allow update:       if request.auth != null && request.auth.uid == userId;
      allow create:       if request.auth != null;
    }

    // ── Global boards/{boardId}/members collection (Team Panel) ──
    // Any signed-in user can read (all board members can see the team list).
    // Writes are gated by UI role checks; keep open here so backfill works.
    match /boards/{boardId}/{document=**} {
      allow read, write: if request.auth != null;
    }

  }
}
